<main class="container">
  <header>
    <h1>ブログを投稿する</h1>
  </header>
  <form action="" method="post">
    <div class="form-group">
      <label for="article_title">ブログタイトル</label>
      <input type="text" name="article_title" placeholder="ブログタイトル" class="form-control">
    </div>

    <div class="form-group">
      <label for="article_body">ブログ本文</label>
      <textarea name="article_body" cols="30" rows="10" placeholder="ブログ本文" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-default">投稿する</button>
  </form>
</main>