<main class="container">
  <header>
    <h1>記事を投稿する</h1>
  </header>
  <%= form_for @article do |f| %>
    <div class="form-group">
      <%= f.label :name, 記事タイトル %>
      <%= f.text_field :name %>
    </div>

    <div class="form-group">
      <%= f.label :body ,ブログ本文 %>
      <%= f.text_field :body %>
    </div>

    <%= f.submit "投稿する" %>
  <% end %> 
</main>