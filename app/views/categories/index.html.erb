<main class="container">
  <header>
    <h1>カテゴリ一覧</h1>
  </header>
  <%= link_to "カテゴリを追加する", new_category_path, class: "btn btn-default" %>
  <ul>
  <% @categories.each do |category| %>
    <li>
      <%= category.name %>
      <%= link_to "編集", edit_category_path(category), class: "btn btn-default btn-xs" %>
      <%= link_to "削除", category_path(category), method: :delete, data: { confirm: "削除しますか？" }, class: "btn btn-danger btn-xs" %>
    </li>
  <% end %>
  </ul>
  <%= link_to "トップページへ", controller: "home" %>
</main>